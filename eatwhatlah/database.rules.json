{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "userSearchHistory": {
      "$uid": {
        ".indexOn": ["timestamp"]
      }
    },
    "restaurants": {
      ".read": true,
      ".write": "auth != null"
    },
    "favorites": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "userEmotions": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "reviews": {
      "$uid": {
        ".read": true,
        ".write": "auth.uid === $uid"
      }
    }
  }
}